# Database
DATABASE_URL=your_database_connection_string_here

# Server
NODE_ENV=development
PORT=5000
CLIENT_URL=http://localhost:3000
APP_URL=http://localhost:5000

# JWT Secret (generate a random string)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
SESSION_SECRET=your-super-secret-session-key-change-this-in-production

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:5000/api/auth/google/callback

# Facebook OAuth (optional)
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret
FACEBOOK_CALLBACK_URL=http://localhost:5000/api/auth/facebook/callback

# TikTok OAuth (optional)
TIKTOK_CLIENT_KEY=your-tiktok-client-key
TIKTOK_CLIENT_SECRET=your-tiktok-client-secret
TIKTOK_CALLBACK_URL=http://localhost:5000/api/auth/tiktok/callback

# Google Maps API (for BiteMap feature and Wedding Planning)
# Note: Get your API key from https://console.cloud.google.com/google/maps-apis
# Make sure to enable both "Maps JavaScript API" and "Places API"
GOOGLE_MAPS_API_KEY=your-google-maps-api-key
# Client-side version (exposed to browser via Vite)
VITE_GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# Email Service (for verification emails)
# For Gmail: Use smtp.gmail.com with an App Password (not your regular password)
# For other providers: Update MAIL_HOST accordingly (e.g., smtp.ionos.com)
MAIL_HOST=smtp.ionos.com
MAIL_PORT=587
MAIL_USER=verify@notify.chefsire.com
MAIL_PASS=your-verification-email-password-here
MAIL_FROM=ChefSire Royal Guard <verify@notify.chefsire.com>

# Wedding Invitation Email Service (separate from verification emails)
# If not provided, will fall back to using the main MAIL_* credentials above
WEDDING_MAIL_HOST=smtp.ionos.com
WEDDING_MAIL_PORT=587
WEDDING_MAIL_USER=invitations@chefsire.com
WEDDING_MAIL_PASS=your-wedding-email-password-here
WEDDING_MAIL_FROM=ChefSire Weddings <invitations@chefsire.com>
# Optional: Reply-To address for guest responses (if not set, replies go to FROM address)
WEDDING_REPLY_TO=rsvp@chefsire.com

